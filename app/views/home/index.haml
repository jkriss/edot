:erb
  <%= periodically_call_remote :update => 'recent', :frequency => '5', :url => feeds_path, :method => :get %>


#catchphrase
  
  #beta_bubble
    %a{ :href => 'http://everyday1thing.uservoice.com/forums/47005'}
      = image_tag 'betaBubble.png'

  #login
    - if !logged_in?
      = link_to "Log in with Twitter", twitter_login_path
      %br/
      or
      %br/
      = "#{link_to 'sign up', signup_path}!"
    - else
      = "#{link_to 'I did a thing', post_path}!"

  #what_thing
    %a{ :href => about_path }
      = image_tag 'whatonething.png'
  
#recent
  = render :partial => 'feeds'
  
%h3 Today's totals

%ul.plain.categories
  - @todays_totals.each do |t|
    %li= "#{t[:category].name}: #{t[:total]} pts"
