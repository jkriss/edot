- cdate = local(thing.created_at).strftime("%B %d, %I:%M %p")
- whitespace = /^ *$/
- if whitespace.match(thing.text)
  - usercomment = "&nbsp;"
- else
  - usercomment = thing.text
%div.userThings
  %div.userComment
    %blockquote
      %p
        = usercomment
  %cite.userComment
    = "(#{thing.subcategory.name})"
    = "-"
    = "(#{cdate})"
    - if defined?(show_user) && show_user
      \-
      = link_to thing.user.login, thing.user
