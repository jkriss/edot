!!!
%html
  %head
    :plain
      <script type="text/javascript" src="http://use.typekit.com/jeg2jrz.js"></script>
      <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
      <script type="text/JavaScript" src="/javascripts/rounded.js"></script>
      <script type="text/JavaScript">
          window.onload = function() {
              settings = {
                  tl: { radius: 10 },
                  tr: { radius: 10 },
                  bl: { radius: 10 },
                  br: { radius: 10 },
                  antiAlias: true,
                  autoPad: true
              }
              var myBoxObject = new curvyCorners(settings, "userComment");
              myBoxObject.applyCornersToAll();
          }
      </script>
      
    = javascript_include_tag 'prototype'

    = stylesheet_link_tag 'formtastic'
    = stylesheet_link_tag 'formtastic_changes'
    = stylesheet_link_tag 'styles'
    = stylesheet_link_tag 'awesome_buttons'
    = stylesheet_link_tag 'rounded'
    
    %title Every Day One Thing
    
  %body
  
    #header
      %ul
        - if logged_in?
          %li
            = avatar(current_user, 20)
            = "Hey there, #{current_user.login}!"
          %li.last= link_to "Log out", logout_path
        - else
          %li= link_to "Log in", login_path
          %li.last= link_to "Sign up", signup_path
  
    #main
      = yield
    
    - if Rails.env.production?
      #tracker
        :plain
          <a title="Web Analytics" href="http://getclicky.com/184306"><img alt="Web Analytics" src="http://static.getclicky.com/media/links/badge.gif" border="0" /></a>
          <script src="http://static.getclicky.com/js" type="text/javascript"></script>
          <script type="text/javascript">clicky.init(196401);</script>
          <noscript><p><img id="clicky-img" alt="Clicky" width="1" height="1" src="http://in.getclicky.com/196401ns.gif" /></p></noscript>

    :plain
      <script type="text/javascript">
        var uservoiceOptions = {
          key: 'everyday1thing',
          host: 'everyday1thing.uservoice.com', 
          forum: '47005',
          alignment: 'left',
          background_color:'#316790', 
          text_color: 'white',
          hover_color: '#06c',
          lang: 'en',
          showTab: true
        };
        function _loadUserVoice() {
          var s = document.createElement('script');
          s.src = ("https:" == document.location.protocol ? "https://" : "http://") + "uservoice.com/javascripts/widgets/tab.js";
          document.getElementsByTagName('head')[0].appendChild(s);
        }
        _loadSuper = window.onload;
        window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper(); _loadUserVoice(); };
      </script>
